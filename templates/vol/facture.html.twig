{% extends 'base_front.html.twig' %}

{% block body %}
{{parent()}}

		<div class="container">
			<div class="row">
				<div class="col-lg-1 temp_col"></div>
				
				<div class="col-lg-12">
					<!-- Offers Grid -->

					<div class="offers_grid">
    <h1>Facture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>Nbr</th>
                <th>PrixTotal</th>
                <th>PrixUnitaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.designation }}</td>
                <td>{{ facture.nbr }}</td>
                <td>{{ facture.prixTotal }}</td>
                <td>{{ facture.prixUnitaire }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('app_facture_show', {'id': facture.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_facture_edit', {'id': facture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
	</div>
				</div>

			</div>
		</div>
{% endblock %}