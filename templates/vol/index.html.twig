            <!-- item-->
            <a href="javascript:void(0);" class="dropdown-item">Separated link</a>
        </div>
    </div>

    <p class="text-muted font-14 m-b-20">

        <a href="{{ path('app_vol_new') }}">
            <button type="button" class="btn btn-purple btn-rounded w-md waves-effect waves-light m-b-5">Ajouter un vol</button>
            
           
        </a>
         <a href="{{path('vol_index_inf')}}"  class="btn btn-purple btn-rounded w-md waves-effect waves-light m-b-5"> exp</a>
          <a href="{{path('vol_index_encours')}}"  class="btn btn-purple btn-rounded w-md waves-effect waves-light m-b-5"> encours</a>
    <h4 class="m-t-0 header-title">List Des Vols</h4>
<div class="card">
        <div class="card-body">
        
            <h4 class="header-title mt-0 mb-3">Vol index</h4>

            <div class="table-responsive">
                <table id="myTable" class="table table-hover mb-0">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>DateArrivee</th>
                        <th>DateDepart</th>
                        <th>LieuArrive</th>
                        <th>LieuDepart</th>
                        <th>Montant</th>
                        <th>Place Totale</th>
                        <th>Place reserve</th>
                        <th>FactureId</th>
                        <th >Modifier</th>
                        <th >Supprimer</th>
                        <th >Detail</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for vol in vols %}
                        <tr>
                            <td>{{loop.index}}</td>
                            <td>{{ vol.dateArrivee ? vol.dateArrivee|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ vol.dateDepart ? vol.dateDepart|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ vol.lieuArrive }}</td>
                            <td>{{ vol.lieuDepart }}</td>
                            <td>{{ vol.montant }}</td>
                            <td>{{ vol.nbrdispo }}</td>
                            <td>{{ vol.nbrreserve }}</td>
                            <td>{{ vol.factureId }}</td>
                            {#<td>
                                <a class="btn btn-info " href="{{ path('app_vol_show', {'id': vol.id}) }}">show</a>
                                <a class="btn btn-warning" href="{{ path('app_vol_edit', {'id': vol.id}) }}">edit</a>
                            </td>#}
                            <td>
                                <a href="{{ path('app_vol_edit', {'id': vol.id}) }}"> <i class="fa fa-pencil"></i></a>
                            </td>

                            <td>
                               <a href="{{ path('app_vol_delete', {'id': vol.id}) }}"><i class="fa fa-trash" ></i> </a>
                            <td>
                                <a href="{{ path('app_vol_show', {'id': vol.id}) }}"><i class="fa fa-list" style="color:#0eac5c;font-size:20px"></i> </a>
                            </td>
                        </tr>

                        {% else %}
                        <tr>
                            <td colspan="8">no records found</td>
                        </tr>
                        {% endfor %}

                    </tbody>
                </table>
            </div>
        </div> 
    </div>

    
{% endblock %}
